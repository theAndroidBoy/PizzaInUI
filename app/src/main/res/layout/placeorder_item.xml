<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <TextView
            android:padding="16dp"
            android:id="@+id/item_name_placeholderItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Crispy Chicken-2Pc"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:padding="16dp"
            android:id="@+id/removeButton_placeOrder_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/holo_red_dark"
            android:text="X"/>

        <TextView
            android:id="@+id/item_price_placeholderItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_name_placeholderItem"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Rs $460"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>
